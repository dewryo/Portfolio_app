[Unit]
Description=Docker Container
Requires=docker.service
After=docker.service

[Service]
Restart=always
WorkingDirectory=/home/ec2-user/Portfolio_app
ExecStart=/home/ec2-user/Portfolio_app docker-compose up
ExecStop=/home/ec2-user/Portfolio_app docker-compose down

[Install]
WantedBy=multi-user.target
